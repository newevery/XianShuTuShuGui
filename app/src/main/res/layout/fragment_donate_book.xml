<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_donate_notcheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/colorPeachPuff"
            android:gravity="center"
            android:clickable="true"
            android:text="预约分享图书(已提交未审核)"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_donate_havcheck"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center"
            android:text="已分享图书(包括分享失败)"
            android:textColor="#000000"
            android:textSize="15sp" />
        <ImageButton
            android:id="@+id/donate_scan_IB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_scan"
            android:text="扫码分享" />
    </LinearLayout>


    <ListView
        android:id="@+id/donate_notcheck_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffff"></ListView>




    <ListView
        android:id="@+id/donate_havecheck_lv"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"></ListView>
</LinearLayout>