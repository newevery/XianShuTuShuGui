<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoDisplay" parent="android:Theme.NoDisplay" />

    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/window_out</item>
        <item name="android:windowExitAnimation">@anim/window_back</item>
    </style>
    <style name="tablayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorYellowGreen</item>
        <item name="tabSelectedTextColor">@color/colorYellowGreen</item>
        <item name="tabBackground">@color/colorWhite</item>
    </style>
</resources>
